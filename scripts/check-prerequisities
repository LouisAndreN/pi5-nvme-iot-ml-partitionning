REQUIRED_TOOLS=(
    "parted"
    "rsync"
    "mkfs.vfat"
    "mkfs.ext4"
    "mkfs.xfs"
    "mkfs.btrfs"
    "lsblk"
    "blkid"
    "chroot"
)

for tool in "${REQUIRED_TOOLS[@]}"; do
    if ! command -v "$tool" &> /dev/null; then
        apt-get install -y "${tool}" || {
            log_error "Ã‰chec installation $tool"
            exit 1
        }
done
